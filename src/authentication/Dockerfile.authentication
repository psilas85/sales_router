# ============================
# üöÄ Dockerfile.authentication (SalesRouter Auth Service)
# ============================

# 1Ô∏è‚É£ Imagem base leve e est√°vel
FROM python:3.11-slim-bullseye

# 2Ô∏è‚É£ Diret√≥rio de trabalho
WORKDIR /app/authentication

# 3Ô∏è‚É£ Vari√°veis de ambiente principais
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    TZ=America/Sao_Paulo \
    ENV=production \
    LOGURU_LEVEL=INFO

# 4Ô∏è‚É£ Depend√™ncias do sistema
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    curl \
    tzdata \
    && rm -rf /var/lib/apt/lists/*

# 5Ô∏è‚É£ Copia e instala depend√™ncias Python
COPY ./requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# 6Ô∏è‚É£ Instala libs cr√≠ticas espec√≠ficas de autentica√ß√£o
RUN pip install --no-cache-dir fastapi uvicorn bcrypt PyJWT psycopg2-binary loguru==0.7.2

# 7Ô∏è‚É£ Copia m√≥dulos da aplica√ß√£o
COPY ./src/authentication /app/authentication
COPY ./src/database /app/database

# 8Ô∏è‚É£ Porta padr√£o e startup
EXPOSE 8000

# 9Ô∏è‚É£ Log b√°sico e inicializa√ß√£o
RUN python --version && \
    echo "üîê Auth Service pronto. Depend√™ncias principais:" && \
    pip list | grep -E "fastapi|bcrypt|PyJWT|psycopg2|loguru"

# üîü Comando principal
CMD ["uvicorn", "authentication.api.authentication_api:app", "--host", "0.0.0.0", "--port", "8000"]
